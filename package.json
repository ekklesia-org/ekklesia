{
  "name": "ekklesia",
  "displayName": "Ekklesia",
  "version": "1.0.0",
  "description": "A comprehensive church management system built with Hono, Vue.js, and Drizzle ORM. Features include JWT authentication, multi-church architecture, member management, financial tracking, and audit logging.",
  "keywords": [
    "church-management",
    "hono",
    "vue",
    "drizzle-orm",
    "jwt-authentication",
    "multi-church",
    "postgresql",
    "typescript",
    "nx-monorepo"
  ],
  "author": "Diego Lamar√£o",
  "homepage": "https://github.com/ekklesia-org/ekklesia",
  "repository": {
    "type": "git",
    "url": "https://github.com/ekklesia-org/ekklesia.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "npx nx run-many -t serve -p api admin-web client-app",
    "dev:api": "npx nx serve api",
    "dev:admin": "npx nx serve admin-web",
    "dev:client": "npx nx serve client-app",
    "build:all": "npx nx run-many -t build -p api admin-web client-app ui",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs -f postgres",
    "db:migrate": "npx drizzle-kit push",
    "db:generate": "npx drizzle-kit generate",
    "db:studio": "npx drizzle-kit studio",
    "db:reset": "npx drizzle-kit drop",
    "pgadmin:up": "docker-compose up -d pgadmin",
    "pgadmin:down": "docker-compose stop pgadmin",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "private": true,
  "dependencies": {
    "@capacitor/cli": "^7.4.1",
    "@capacitor/core": "^7.4.1",
    "@heroicons/vue": "^2.2.0",
