{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "baseUrl": "../..",
    "paths": {
      "@ekklesia/shared": ["libs/shared/src/index.ts"],
      "@ekklesia/shared/*": ["libs/shared/src/*"],
      "@ekklesia/shared-utils": ["libs/shared-utils/src/index.ts"],
      "@ekklesia/shared-utils/*": ["libs/shared-utils/src/*"],
      "@ekklesia/translations": ["libs/translations/src/index.ts"],
      "@ekklesia/ui": ["libs/ui/src/index.ts"]
    }
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "extends": "../../tsconfig.base.json"
}
